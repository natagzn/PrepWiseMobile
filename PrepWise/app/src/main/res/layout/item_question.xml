<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded_background"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_know"
            style="@style/semi_bold_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/known"
            android:textColor="#31A659"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/status_still_learning"
            style="@style/semi_bold_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/still_learning"
            android:textColor="#FF9900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            app:srcCompat="@drawable/help" />

    </LinearLayout>

    <TextView
        android:id="@+id/question"
        style="@style/regular_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="High-Level Programming Language"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E4E4E4"
        android:layout_marginVertical="4dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        style="@style/regular_16"
        android:text="Language abstracted from hardware, easier for developers" />

</LinearLayout>