<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="13dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/white_rounded_background"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/user_icon_medium" />

        <TextView
            android:id="@+id/username"
            style="@style/semi_bold_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="nahalkaanna"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/report"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/report" />
        <ImageView
            android:id="@+id/delete"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dump" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level"
            style="@style/semi_bold_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_rounded_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="Junior"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/category"
            style="@style/semi_bold_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_rounded_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="Java Script"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="top">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_book"
            style="@style/semi_bold_15"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginEnd="2dp"
            style="@style/semi_bold_15"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/article_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book1 Author A.A."
            style="@style/light_15"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt3"
            style="@style/semi_bold_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt1"
            style="@style/semi_bold_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text=":"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/description"
            style="@style/light_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum, lorem ipsum, lorem ipsum, lorem ipsum."
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/number_of_likes"
                style="@style/semi_bold_15"
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:paddingHorizontal="5dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/like" />

            <TextView
                android:id="@+id/number_of_dislikes"
                style="@style/semi_bold_15"
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <ImageView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:paddingHorizontal="5dp"
                app:srcCompat="@drawable/dislike" />

        </LinearLayout>

        <TextView
            android:id="@+id/date"
            style="@style/medium_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.10.2024"
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>