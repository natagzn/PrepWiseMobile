<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/answer"
        style="@style/regular_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textIsSelectable="true"
        android:text="Answer  1 lorem lorem lorm lorem lrem lorem lorem lorem lorem"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            app:srcCompat="@drawable/user_icon_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/username"
            style="@style/light_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="nahalkaanna"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/date"
            style="@style/medium_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.10.2024"
            android:layout_marginEnd="3dp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/time"
            style="@style/medium_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:10"
            android:textColor="@color/gray" />

    </LinearLayout>

</LinearLayout>