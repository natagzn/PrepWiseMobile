<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ViewSetFragment">

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_left" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/three_dots" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/set_name"
                style="@style/bold_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/not_save" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_icon_small" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="nahalkaanna"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/line_or" />

            <TextView
                android:id="@+id/number_of_questions"
                style="@style/light_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="16"
                android:textColor="@color/gray" />

            <TextView
                style="@style/light_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="@string/questions"
                android:textColor="@color/gray" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginEnd="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/line_or" />

            <ImageView
                android:id="@+id/access_img"
                android:layout_width="17dp"
                android:layout_height="15dp"
                android:layout_marginEnd="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/resource_private" />

            <TextView
                android:id="@+id/access_type"
                style="@style/light_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/private_str"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt1"
                style="@style/semi_bold_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt2"
                style="@style/semi_bold_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/level"
                style="@style/medium_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/blue_rounded_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="Junior"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/date"
                style="@style/light_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="03.11.2024"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt3"
                style="@style/semi_bold_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt4"
                style="@style/semi_bold_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/categories_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/white_rounded_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="11dp"
            android:paddingVertical="15dp">

            <TextView
                style="@style/semi_bold_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/progress_learning"
                android:textColor="@color/black" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:backgroundTint="@color/gray"
                    android:progressDrawable="@drawable/progress_bar_linear"
                    android:max="100"
                    android:maxHeight="30dp"
                    android:minHeight="30dp"
                    android:progress="50"
                    android:progressTint="#32A659" />

                <TextView
                    android:id="@+id/progress_persent"
                    style="@style/semi_bold_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="50%"
                    android:textColor="@color/white" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/light_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/known"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/light_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:text=":"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/number_of_know"
                    style="@style/semi_bold_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#32A659" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/light_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/still_learning"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/light_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:text=":"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/number_of_still_learning"
                    style="@style/semi_bold_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#FF9900" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/study_flashcards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_rounded_background"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginEnd="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/study_flashcards" />

            <TextView
                style="@style/regular_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/study_flashcards"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_flashcards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/white_rounded_background"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginEnd="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/set"
                app:tint="@color/green" />

            <TextView
                style="@style/regular_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_flashcards"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gray_rounded_stroke"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/txt5"
                style="@style/semi_bold_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/sort"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_down" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp" />

        <TextView
            android:id="@+id/empty"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/light_15"
            android:visibility="gone"
            android:layout_marginTop="70dp"
            android:textColor="@color/gray"
            android:text="@string/no_question_created_yet" />

    </LinearLayout>
</FrameLayout>