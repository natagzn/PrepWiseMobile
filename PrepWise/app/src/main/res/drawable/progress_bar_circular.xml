<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тло (повний прогрес бар) -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#F2DBBE" /> <!-- Колір фону прогрес-бара (ще не вивчене) -->
        </shape>
    </item>

    <!-- Прогрес (вивчена частина) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="#31A659" /> <!-- Колір вивченої частини -->
            </shape>
        </clip>
    </item>
</layer-list>
